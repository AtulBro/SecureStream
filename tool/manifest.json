{
    "manifest_version": 3,
    "name": "SecureDownload - Verify Before Download",
    "version": "1.0",
    "permissions": ["downloads", "downloads.shelf", "storage"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_title": "SecureDownload"
    },
    "web_accessible_resources": [
      {
        "resources": ["verification.html"],
        "matches": ["<all_urls>"]
      }
    ],
    "icons": {
      "48": "icon.png"
    }
  }
  